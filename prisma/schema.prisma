// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Note {
  id          String   @id @default(cuid())
  userId      String
  inputType   String
  original    String
  summary     String?
  decisions   String?
  actionItems String?
  audioUrl    String?
  createdAt   DateTime @default(now())
}